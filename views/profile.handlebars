<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a New Blog Post:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id="blog_title" name="blog_title" />
      </div>
      <div class="form-group">
        <label for="blog-post">Blog Post:</label>
        <textarea class="form-input" id="blog_post" name="blog_post"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-secondary" id="newBlogBtn"> Add Blog Post </button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 project-list">
    <h3>Submitted Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a class="link" href="/blog/{{blog.id}}">{{blog.blog_title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-danger" id="deleteBtn" data-id="{{blog.id}}"> DELETE </button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
